

    <div class="w-full flex flex-wrap">

        <!-- Login Section -->
        <div class="w-full md:w-1/2 flex flex-col">

            <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-24">
                <a href="#" class="bg-black text-white font-bold text-xl p-4"><%= image_tag("alogo.jpg", :alt => "rss feed", length: :"90px", width: :"90px") %></a>
            </div>

            <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
                <p class="text-center text-3xl">Welcome.</p>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    
                        <div class="flex flex-col pt-4">
                            <label for="email" class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4">Email</label>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
                        </div>
        
                        <div class="flex flex-col pt-4">
                            <label for="password" class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4">Password</label>
                            <%= f.password_field :password, autocomplete: "current-password", class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
                        </div>

                          <% if devise_mapping.rememberable? %>
                              <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                              </div>
                          <% end %>
                               
                                <div>
                                  <%= f.submit "Log in", class:"shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
                                </div>
                                <% session[:addtocart] = {orderable_type: params[:type], orderable_id: params[:id] }%>
                    <% end %>
                    <%= render "devise/shared/links" %>
            </div>
        </div>
        
      
        <!-- Image Section -->
        <div class="w-1/2 shadow-2xl">
            <img class="object-cover w-full h-screen hidden md:block"   <%= image_tag("OIP.jpg", :alt => "rss feed") %> >
        </div>
    </div>

    